generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  wallet   Float
}

model Payment {
  id        Int      @id @default(autoincrement())
  order_id  String
  amount    Float
  currency  String
  status    String
  isFinal   Boolean
  address   String
  createdAt DateTime @default(now())
}
